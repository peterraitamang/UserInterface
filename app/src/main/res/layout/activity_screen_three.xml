<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ScreenThreeActivity"
    android:padding="30dp">

    <ImageView
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back"
        android:id="@+id/iv_back2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintRight_toLeftOf="@id/iv_profile"/>

    <ImageView
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_person"
        android:id="@+id/iv_profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_pg3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:cardCornerRadius="30dp"
        app:layout_constraintTop_toBottomOf="@id/iv_profile">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:paddingTop="30dp"
            android:paddingBottom="30dp"
            android:background="@drawable/custom_cardview_shape">
            <TextView
                android:id="@+id/txt1_pg3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lead UI Designer"
                android:textStyle="bold"
                android:textColor="@color/black"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="22sp"/>
            <TextView
                android:id="@+id/txt2_pg3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$10k-$13k"
                app:layout_constraintTop_toBottomOf="@id/txt1_pg3"
                app:layout_constraintStart_toStartOf="parent"/>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_more"
                android:background="#FF5F1F"
                app:layout_constraintTop_toBottomOf="@+id/txt2_pg3"
                app:layout_constraintEnd_toEndOf="parent"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/txt3_pg3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        app:layout_constraintTop_toBottomOf="@id/cardview_pg3"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="15sp"/>
    <TextView
        android:id="@+id/txt4_pg3"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pg_3"
        app:layout_constraintTop_toBottomOf="@id/txt3_pg3"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/txt5_pg3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Job popularity chart"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/txt4_pg3"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/cardview1_pg3"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintTop_toBottomOf="@id/txt5_pg3"
        app:layout_constraintStart_toStartOf="parent"
        app:cardCornerRadius="20dp"
        android:layout_marginTop="20dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F1D2D5" />
    </androidx.cardview.widget.CardView>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Apply for job"
            app:layout_constraintTop_toBottomOf="@id/cardview1_pg3"
            android:backgroundTint="@color/black"
            android:layout_marginTop="20dp"
            android:padding="20dp"
            style="@style/ThemeOverlay.Material3.AutoCompleteTextView.OutlinedBox"/>




</androidx.constraintlayout.widget.ConstraintLayout>